<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:liekkas="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:background="@drawable/readd_bg">

    <include 
        layout="@layout/topbar"
        android:id="@+id/topbar"
        />
    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="fill_parent"
        android:layout_height="140dp" 
        android:background="@drawable/img_png5">

        <com.maifeng.fashiongo.banner.CiecleImageView
            android:id="@+id/img_headview"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/img_png6"
            liekkas:outCiecleColor="#ffffff"
            liekkas:outCiecleWith="1dp" />
        
        <TextView 
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/img_headview"
            android:textColor="#fff"
            android:layout_marginTop="7dp"
            android:textSize="14dp"
            android:text="未设置"/>

    </RelativeLayout>
    <LinearLayout 
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_input9">

        <RelativeLayout
            android:id="@+id/relayout_message"
            android:layout_width="match_parent"
            android:layout_height="50dp" >

            <ImageView
                android:id="@+id/image_message"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ico_basedata" />

            <TextView
                android:id="@+id/tv_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@+id/image_message"
                android:text="基本信息" 
                android:textSize="16sp"
                android:textColor="#a5a5a5"/>

            <ImageView
                android:id="@+id/image_go_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/tv_message"
                android:layout_marginRight="10dp"
                android:src="@drawable/ico_go" />
            
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#c8c8c8" />
        <RelativeLayout
            android:id="@+id/relayout_address"
            android:layout_width="match_parent"
            android:layout_height="50dp" >

            <ImageView
                android:id="@+id/image_address"
                android:layout_width="16dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:src="@drawable/ico_address" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="34dp"
                android:layout_toRightOf="@+id/image_address"
                android:text="收货地址"
                android:textSize="16sp"
                android:textColor="#a5a5a5" />

            <ImageView
                android:id="@+id/image_go_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/tv_address"
                android:layout_marginRight="10dp"
                android:src="@drawable/ico_go" />
            
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#c8c8c8" />
        <RelativeLayout
            android:id="@+id/relayout_myorder"
            android:layout_width="match_parent"
            android:layout_height="50dp" >

            <ImageView
                android:id="@+id/image_myorder"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ico_myorder" />

            <TextView
                android:id="@+id/tv_myorder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@+id/image_myorder"
                android:text="我的订单"
                android:textSize="16sp"
                android:textColor="#a5a5a5" />

            <ImageView
                android:id="@+id/image_go_myorder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/tv_myorder"
                android:layout_marginRight="10dp"
                android:src="@drawable/ico_go" />
            
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout 
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_input9">

        <RelativeLayout
            android:id="@+id/relayout_collect"
            android:layout_width="match_parent"
            android:layout_height="50dp" >

            <ImageView
                android:id="@+id/image_collect"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ico_collect" />

            <TextView
                android:id="@+id/tv_collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@+id/image_collect"
                android:text="我的收藏" 
                android:textSize="16sp"
                android:textColor="#a5a5a5"/>

            <ImageView
                android:id="@+id/image_go_collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/tv_collect"
                android:layout_marginRight="10dp"
                android:src="@drawable/ico_go" />
            
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#c8c8c8" />
        <RelativeLayout
            android:id="@+id/relayout_share"
            android:layout_width="match_parent"
            android:layout_height="50dp" >

            <ImageView
                android:id="@+id/image_share"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ico_share" />

            <TextView
                android:id="@+id/tv_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@+id/image_share"
                android:text="我的分享" 
                android:textSize="16sp"
                android:textColor="#a5a5a5"/>

            <ImageView
                android:id="@+id/image_go_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/tv_share"
                android:layout_marginRight="10dp"
                android:src="@drawable/ico_go" />
            
        </RelativeLayout>
        
        
    </LinearLayout>

</LinearLayout>
