<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e5e5e5"
     >
    <include 
        layout="@layout/topbar"
        />
<LinearLayout 
   android:layout_width="match_parent"
   android:layout_height="wrap_content"
   android:orientation="vertical"
    >
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="享受更全面、便捷的服务"
        android:gravity="center"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        />
    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="horizontal" 
    android:baselineAligned="false"
    >

    <EditText
        android:id="@+id/register_phonenumber"
        android:paddingLeft="10dp"
        android:layout_weight="1"
        android:textSize="16sp"
        android:singleLine="true"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_input9"
        android:hint="请输入手机号码" />

<!--验证码-->
    <Button
        android:id="@+id/register_getVerify"
        android:layout_width="80dp"
        android:layout_height="30dp"
        
        android:layout_margin="10dp"     
        android:background="@drawable/selector_login_btn"
        android:text="获取验证码"
        android:textColor="#ffffff"
        android:textSize="14sp" />

</LinearLayout>

<LinearLayout 
    
	android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
>
    <EditText
        android:id="@+id/register_input_Verify"
         android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		android:textSize="16sp"
		android:singleLine="true"
		
        android:background="@drawable/bg_input9"
        android:hint="请输入验证码" />
    
    <EditText
        android:id="@+id/register_input_Invitation"
         android:paddingLeft="10dp"
        android:textSize="16sp"
        android:singleLine="true"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="30dp"
      	android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		android:layout_marginTop="10dp"
        android:background="@drawable/bg_input9"
        android:hint="请输入邀请码" />
    
    <EditText
        android:id="@+id/register_input_pwd"
         android:paddingLeft="10dp"
        android:textSize="16sp"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		android:layout_marginTop="10dp"
		android:inputType="textPassword"
        android:background="@drawable/bg_input9"
        android:hint="请输入密码" />
    
    <EditText
        android:id="@+id/register_input_ConfirmPwd"
         android:paddingLeft="10dp"
        android:textSize="16sp"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="30dp"
      	android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		android:layout_marginTop="10dp"
		android:inputType="textPassword"
        android:background="@drawable/bg_input9"
        android:hint="确认密码" />

</LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        > 

       <CheckBox
           android:id="@+id/checkbox"
           android:layout_width="wrap_content"
           android:layout_marginLeft="10dp"
           android:button="@drawable/selector_register_checkbox"
           android:layout_height="wrap_content" 
           android:textColor="@android:color/darker_gray"     
           android:text="我已看过并同意时尚购APP"
           android:textSize="12sp" />

        <TextView 
            android:id="@+id/tv_user_access_protocol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#0000ff"
            android:textSize="12sp"
            android:text="《用户使用协议》"
            />
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        >
        <Button
	        android:id="@+id/btn_ok"
	        android:layout_width="match_parent"
	        android:layout_height="30dp"
	        android:background="#606060"
	        android:text="确定"
	        android:enabled="false"
	        android:textColor="#ffffff"
	        android:textSize="16sp"
	        android:layout_margin="8dp"
	        />
        
        </LinearLayout>
</LinearLayout>

