<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <include 
        layout="@layout/topbar"
        android:id="@id/topbar"/>

      <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#fff"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/stay_payment"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@null"
                android:button="@null"
                android:checked="true"
                android:drawableBottom="@drawable/selector_tab_order"
                android:gravity="center"
                android:text="代付款"
                android:textColor="@drawable/selector_order_tab_color" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:background="#CACACA" />

            <RadioButton
                android:id="@+id/stay_delivery"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@null"
                android:button="@null"
                android:drawableBottom="@drawable/selector_tab_order"
                android:gravity="center"
                android:text="代发货"
                android:textColor="@drawable/selector_order_tab_color" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:background="#CACACA" />

            <RadioButton
                android:id="@+id/stay_goods"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@null"
                android:button="@null"
                android:drawableBottom="@drawable/selector_tab_order"
                android:gravity="center"
                android:text="待收货"
                android:textColor="@drawable/selector_order_tab_color" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:background="#CACACA" />

            <RadioButton
                android:id="@+id/have_goods"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@null"
                android:button="@null"
                android:drawableBottom="@drawable/selector_tab_order"
                android:gravity="center"
                android:text="已收货"
                android:textColor="@drawable/selector_order_tab_color" />
        </LinearLayout>

    <ListView
        android:id="@+id/list_myorder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:scrollbars="none" >
    </ListView>
</LinearLayout>
