<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#F02A38"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/layot_left"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/img_left"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/selector_title_back" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/bg_input9"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/ico_search" />

            <EditText
                android:id="@+id/et_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="搜索商品"
                android:imeOptions="actionSearch"
                android:lines="1"
                android:maxLength="25"
                android:padding="5dp"
                android:singleLine="true"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <ListView
            android:id="@+id/lv_first_choice"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_classify_one_unin"
            android:divider="@null"
            android:scrollbars="none" >
        </ListView>

        <GridView
            android:id="@+id/gv_seconed_choice"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:gravity="center"
            android:scrollbars="none"
            android:numColumns="3"
            android:verticalSpacing="10dp"
            android:horizontalSpacing="10dp" >
        </GridView>
    </LinearLayout>

</LinearLayout>