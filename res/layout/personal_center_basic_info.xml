<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:liekkas="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:background="@drawable/readd_bg">

    <include 
        layout="@layout/topbar"
        android:id="@+id/topbar"
        />
   
    <LinearLayout 
        android:layout_marginTop="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF">

        <RelativeLayout
	        android:id="@+id/relativemessage"
	        android:layout_width="fill_parent"
	        android:layout_height="80dp" >

	        <TextView
	            android:id="@+id/textView2"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentLeft="true"
	            android:layout_centerVertical="true"
	            android:layout_marginLeft="10dp"
	            android:text="头像"
	            android:textSize="16sp"
	            android:textColor="#a5a5a5" />
	
	        <com.maifeng.fashiongo.banner.CiecleImageView
	            android:id="@+id/head_img_go"
	            android:layout_width="60dp"
	            android:layout_height="60dp"
	            android:layout_alignParentRight="true"
	            android:layout_centerVertical="true"
	            android:layout_marginRight="30dp"
	            liekkas:outCiecleColor="#ffffff"
            	liekkas:outCiecleWith="1dp" />
	
	        <ImageView
	            android:id="@+id/imageView2"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentRight="true"
	            android:layout_centerVertical="true"
	            android:padding="10dp"
	            android:src="@drawable/ico_go" />
	
	    </RelativeLayout>
	    
        <TextView
            android:id="@+id/tv_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#c8c8c8" />
        
        <RelativeLayout
            android:id="@+id/relayout_account"
            android:layout_width="match_parent"
            android:layout_height="50dp" >
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="账号"
                android:textSize="16sp"
                android:textColor="#a5a5a5" />

            <TextView
                android:id="@+id/tv_view_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView"
                android:layout_alignBottom="@+id/textView"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:text="" 
                android:textSize="16sp"
                android:textColor="#a5a5a5"/>
            
        </RelativeLayout>
        
    </LinearLayout>
    
    <LinearLayout 
        android:layout_marginTop="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF">
       <RelativeLayout
            android:id="@+id/relayout_username"
            android:layout_width="match_parent"
            android:layout_height="50dp" >
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="用户名"
                android:textSize="16sp"
                android:textColor="#a5a5a5" />

            <TextView
                android:id="@+id/tv_view_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView"
                android:layout_alignBottom="@+id/textView"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:text="您还没有添加用户名" 
                android:textSize="16sp"
                android:textColor="#a5a5a5" />

        </RelativeLayout>
        
        <TextView
            android:id="@+id/tv_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#c8c8c8" />
        
        <RelativeLayout
	        android:id="@+id/relative_alipay"
	        android:layout_width="fill_parent"
	        android:onClick="pay"
	        android:layout_height="50dp" >

	        <TextView
	            android:id="@+id/tv_zalipay"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentLeft="true"
	            android:layout_centerVertical="true"
	            android:layout_marginLeft="10dp"
	            android:text="我的支付宝"
	            android:textSize="16sp"
	            android:textColor="#a5a5a5" />
	
	        <ImageView 
	            android:id="@+id/iv_alipay"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentRight="true"
	            android:layout_centerVertical="true"
	            android:layout_marginRight="30dp"
	            android:src="@drawable/ico_alipay"/>
	
	        <ImageView
	            android:id="@+id/iv_alipay_go"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentRight="true"
	            android:layout_centerVertical="true"
	            android:padding="10dp"
	            android:src="@drawable/ico_go" />
	
	    </RelativeLayout>
	    
        <TextView
            android:id="@+id/tv_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#c8c8c8" />
        
        <RelativeLayout
	        android:id="@+id/relative_unionpay"
	        android:layout_width="fill_parent"
	        android:layout_height="50dp" >

	        <TextView
	            android:id="@+id/tv_unionpay"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentLeft="true"
	            android:layout_centerVertical="true"
	            android:layout_marginLeft="10dp"
	            android:text="我的银行卡"
	            android:textSize="16sp"
	            android:textColor="#a5a5a5" />
	
	        <ImageView 
	            android:id="@+id/iv_unionpay"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentRight="true"
	            android:layout_centerVertical="true"
	            android:layout_marginRight="30dp"
	            android:src="@drawable/ico_unionpay"/>
	
	        <ImageView
	            android:id="@+id/iv_unionpay_go"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentRight="true"
	            android:layout_centerVertical="true"
	            android:padding="10dp"
	            android:src="@drawable/ico_go" />
	
	    </RelativeLayout>
	    
        <TextView
            android:id="@+id/tv_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#c8c8c8" />
        
        <RelativeLayout
            android:id="@+id/replace_accuont"
            android:layout_width="match_parent"
            android:layout_height="50dp" >
            <TextView
                android:id="@+id/tv_replace_accuont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="更换账号"
                android:textSize="16sp"
                android:textColor="#a5a5a5" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
